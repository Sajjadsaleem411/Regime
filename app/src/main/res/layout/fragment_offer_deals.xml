    <LinearLayout
        android:id="@+id/T1"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:weightSum="4"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="@drawable/border">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:weightSum="10"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@drawable/offer_deal_header_left"
                android:text="Full Day Meals"
                android:textColor="@color/lightgrey"
                android:gravity="center"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listViewFullDayMeal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="8"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/lightgrey"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:weightSum="10"
            android:layout_gravity="center"
            android:gravity="center_horizontal|center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@drawable/offer_deal_header_right"
                android:text="Lunch Only"
                android:textColor="@color/lightgrey"
                android:gravity="center"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listViewLunchOnlyMeal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="8"/>

        </LinearLayout>

    </LinearLayout>


