<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/left_arrow_icon"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right_arrow_icon"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/theme_corner_button">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Diet Analysis"
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/diet_icon_w"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#422774"
                android:layout_gravity="center_vertical"
                android:text="Height:"
                android:textSize="13sp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1.75"
                android:layout_marginLeft="50dp"
                android:background="@drawable/border">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="000"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:textSize="25sp"/>

            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Kgs"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#422774"
                android:layout_gravity="center_vertical"
                android:text="Weight:"
                android:textSize="13sp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1.75"
                android:layout_marginLeft="48dp"
                android:background="@drawable/border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="000"
                    android:textColor="#000000"
                    android:textSize="25sp" />

            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Kgs"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="#422774"
                android:layout_gravity="center_vertical"
                android:text="Date Of Birth:"
                android:textSize="13sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:spinnerMode="dialog"
                    android:prompt="@string/day"
                    />
                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="70dp"
                    android:layout_height="30dp"

                    android:spinnerMode="dropdown"/>
                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="70dp"
                    android:layout_height="30dp"

                    android:spinnerMode="dropdown"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            >

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:textColor="#422774"
                android:layout_gravity="center_vertical"
                android:text="Your target Goal Weight:"
                android:textSize="13sp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1.75"
                android:layout_marginLeft="20dp"
                android:background="@drawable/border">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="000"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:textSize="25sp"/>

            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Kgs"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="#422774"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:text="Your Activity Fitness Level:"
                android:textSize="13sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RadioButton
                        android:id="@+id/radio1"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="None"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"/>
                    <ImageView
                        android:id="@+id/Iv1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/blue_circle_down_arrow"/>
                    <TextView
                        android:id="@+id/none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/radio1"
                        android:text="I ma not Physically Active"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginLeft="40dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RadioButton
                        android:id="@+id/radio2"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Light Active"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"/>
                    <ImageView
                        android:id="@+id/Iv2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/blue_circle_down_arrow"/>
                    <TextView
                        android:id="@+id/LightActive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/radio2"
                        android:text="I do little physical activity;housework/home based activities, walking and maintain a light workout routine 1-3 times a week"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginLeft="40dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RadioButton
                        android:id="@+id/radio3"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Moderate Active"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"/>
                    <ImageView
                        android:id="@+id/Iv3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/blue_circle_down_arrow"/>
                    <TextView
                        android:id="@+id/ModerateActive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/radio3"
                        android:text="I do frequent walking or jogging and maintain a moderate workout routine 3-5 times a week"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginLeft="40dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RadioButton
                        android:id="@+id/radio4"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Very Active"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"/>
                    <ImageView
                        android:id="@+id/Iv4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/blue_circle_down_arrow"/>
                    <TextView
                        android:id="@+id/VeryActive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/radio4"
                        android:text="I live an active lifestyle, play active sports for several hours and ,maintain active workout routine 6-7 times a week"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginLeft="40dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RadioButton
                        android:id="@+id/radio5"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Extra Active"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"/>
                    <ImageView
                        android:id="@+id/Iv5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/blue_circle_down_arrow"/>
                    <TextView
                        android:id="@+id/ExtraActive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/radio5"
                        android:text="very hard exercise/sports &#38; physical job or 2x training "
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginLeft="40dp"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#422774"
                android:layout_gravity="center_vertical"
                android:text="Gender:"
                android:textSize="13sp"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radio6"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Male"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>
                <RadioButton
                    android:id="@+id/radio7"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Female"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/get_your_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GET YOUR RESULTS"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:background="@drawable/theme_corner_button"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</ScrollView>